<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tree Algorithms" MinHeight="350" MinWidth="525" Height="Auto" Width="Auto">
    <Grid ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="500" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="Auto" MinWidth="200"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer Width="Auto" Height="500" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Grid.Column="0">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                <RadioButton x:Name="rbAlgorithmP" Content="Nested Parentheses" IsChecked="True" Width="Auto"/>
                <RadioButton x:Name="rbAlgorithmN" Content="Binary Tree Left Right Links" IsChecked="True" Width="Auto"/>
            </StackPanel>
        </ScrollViewer>
        <ScrollViewer Width="Auto" Height="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="1">

        </ScrollViewer>
    </Grid>
</Window>
